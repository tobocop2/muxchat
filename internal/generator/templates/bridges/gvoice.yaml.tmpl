# Network-specific config options
network:
    displayname_template: '{{`{{ or .Contact.Name .PhoneNumber }}`}} (GVoice)'
    initial_chat_sync_count: -1

# Bridge settings
bridge:
    command_prefix: '!gvoice'
    personal_filtering_spaces: true
    private_chat_portal_meta: true
    management_room_text:
        welcome: |
            Hello! I'm a Google Voice bridge bot.

            **To log in:**
            Run helper: `cd helpers && npm install && node gvoice.js`
            Or manually extract cookies and send as JSON.

            Docs: https://docs.mau.fi/bridges/go/gvoice/authentication.html
            Alternative: https://github.com/mautrix/manager
        welcome_connected: "You're connected to Google Voice."
        welcome_unconnected: "Use `login` to connect your Google Voice account."
    permissions:
        "*": relay
        "{{.ServerName}}": user
        "@{{.AdminUser}}:{{.ServerName}}": admin

# Database config - TOP LEVEL
database:
    type: sqlite3-fk-wal
    uri: file:/data/mautrix-gvoice.db?_txlock=immediate

# Homeserver details
homeserver:
    address: http://synapse:8008
    domain: {{.ServerName}}
    software: standard
    async_media: false

# Appservice details
appservice:
    address: http://mautrix-gvoice:{{.Port}}
    hostname: 0.0.0.0
    port: {{.Port}}
    id: gvoice
    bot:
        username: {{.BotUsername}}
        displayname: Google Voice bridge bot
    ephemeral_events: true
    async_transactions: false
    as_token: {{.ASToken}}
    hs_token: {{.HSToken}}
    username_template: gvoice_{{`{{.}}`}}

# Matrix settings
matrix:
    message_status_events: false
    delivery_receipts: true
    message_error_notices: true

# Double puppeting - makes your messages appear as you, not ghost users
double_puppet:
    secrets:
        {{.ServerName}}: "{{.DoublePuppetSecret}}"

# Logging config
logging:
    min_level: info
    writers:
        - type: stdout
          format: pretty-colored
