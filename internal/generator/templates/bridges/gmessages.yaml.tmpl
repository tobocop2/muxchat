# Network-specific config options
network:
    displayname_template: '{{`{{or .FullName .FirstName .PhoneNumber "Unknown"}}`}} (SMS)'
    # Sync ALL chats (not just recent 25)
    initial_chat_sync_count: -1

# Bridge settings
bridge:
    command_prefix: '!gm'
    personal_filtering_spaces: true
    private_chat_portal_meta: true
    management_room_text:
        welcome: |
            Hello! I'm a Google Messages bridge bot.

            **To log in:**
            Send `login` and scan the QR code with Google Messages (⋮ → Device pairing).

            Docs: https://docs.mau.fi/bridges/go/gmessages/authentication.html
            Alternative: https://github.com/mautrix/manager
        welcome_connected: "You're connected to Google Messages."
        welcome_unconnected: "Use `login` to connect your Google Messages account."
    permissions:
        "*": relay
        "{{.ServerName}}": user
        "@{{.AdminUser}}:{{.ServerName}}": admin

# Database config - TOP LEVEL
database:
    type: sqlite3-fk-wal
    uri: file:/data/mautrix-gmessages.db?_txlock=immediate

# Homeserver details
homeserver:
    address: http://synapse:8008
    domain: {{.ServerName}}
    software: standard
    async_media: false

# Appservice details
appservice:
    address: http://mautrix-gmessages:{{.Port}}
    hostname: 0.0.0.0
    port: {{.Port}}
    id: gmessages
    bot:
        username: {{.BotUsername}}
        displayname: Google Messages bridge bot
    ephemeral_events: true
    async_transactions: false
    as_token: {{.ASToken}}
    hs_token: {{.HSToken}}
    username_template: gmessages_{{`{{.}}`}}

# Matrix settings
matrix:
    message_status_events: false
    delivery_receipts: true
    message_error_notices: true

# Double puppeting - makes your messages appear as you, not ghost users
double_puppet:
    secrets:
        {{.ServerName}}: "{{.DoublePuppetSecret}}"

# Logging config
logging:
    min_level: info
    writers:
        - type: stdout
          format: pretty-colored
